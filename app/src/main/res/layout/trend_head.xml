<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="top.wzmyyj.feadapter.model.TrendHeadModel" />

        <variable
            name="listener"
            type="top.wzmyyj.feadapter.model.TrendHeadModel.OnItemListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#66aa00">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="@{()->listener.onHead(item)}"
            android:text="@{item.txt}" />

    </LinearLayout>
</layout>
